<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InforActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar"
        app:title="Thông tin"
        android:background="#DF8B50"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        tools:ignore="MissingConstraints"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:id="@+id/tv1"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="#D53434"
        app:layout_constraintTop_toBottomOf="@+id/toobar"
        android:text="Liên_Nhi-PetShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/tv2"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:text="Nơi cung cấp, cập nhật sớm và đầy đủ nhất các thông tin về những giống thú cưng quý, mới và đang được ưa chuộng trên tị trường."
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv3"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:text="Những giống thú cưng với hình ảnh, thông tin chính xác và đa dạng với mỗi loại thú cưng, giá cả hợp lý."
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        android:layout_marginLeft="5dp"
        android:text="Nếu có thắc mắc vui lòng liên hệ đến tổng đài 0123456789 hoặc liên hệ qua gmail: lien_nhi@gmail.com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>